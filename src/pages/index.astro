---
import App from '../components/App.jsx';
import Header from '../components/Header/Header.astro'

let title = 'Winter Store';

---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <style lang="scss">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            height: 100%;
            width: 100%;
        }

        body {
            padding: 0;
            margin: 0;
            display: flex;
            font-family: 'Poppins', sans-serif;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <main>
        <Header />
        
        <App client:visible/>
        
    </main>
</body>
</html>
